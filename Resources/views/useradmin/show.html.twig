{% extends 'useradmin/admin_base.html.twig' %}

{% block body %}
    <h1>Useradmin</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ userAdmin.id }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ userAdmin.login }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ userAdmin.mail }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ userAdmin.password }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_site_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_site_edit', { 'id': userAdmin.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
